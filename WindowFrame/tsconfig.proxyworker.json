{
	"compilerOptions": {
		"baseUrl": "src",
		"outDir": "public",
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"strict": true,

		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,

		"removeComments": true,
		"preserveConstEnums": true,
		"allowSyntheticDefaultImports" :true,
		"sourceMap": true,

		"declaration": false,

		"types": [
			"webpack-env",
			"http-proxy",
			"jquery",
			"uuid"
		],
		"lib": [
			"esnext",
			"dom",
			"dom.iterable",
			"scripthost"
		],
		"paths": {
			"@/*": ["./*"],
			"@Components/*": ["./Frontend/Components/*"]
		}
	},
	"include": [
		"src/Proxy/ProxyWorker.ts",
		"src/*.d.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}